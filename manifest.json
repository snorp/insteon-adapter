{
  "author": "James Willcox <snorp@snorp.net>",
  "description": "INSTEON adapter add-on for WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0",
      "enabled": false
    }
  },
  "homepage_url": "https://github.com/snorp/insteon-adapter",
  "id": "insteon-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "INSTEON",
  "short_name": "INSTEON",
  "version": "1.0.1",
  "options": {
    "default": {
      "path": "/dev/ttyUSB0"
    },
    "schema": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": {
          "type": "string",
          "default": "/dev/ttyUSB0",
          "description": "Path to USB device."
        }
      }
    }
  },
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "css/*.css",
    "js/*.js",
    "views/*.html"
  ]
}
